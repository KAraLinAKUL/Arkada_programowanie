pygame.mixer.music.load() #granie muzyczki na tle
pygame.mixer.music.set.volume() #głosność muzyczki
pygame.mixer.music.play(-1) #muzyczka gra cały czas
pygame.mixer.music.pause() #pauza muzyczki jeżeli gra wstrzymana
pygame.mixer.music.unpause() #przerywanie pauzy
#wyłączamy muzyczkę przy uderzeniu
pygame.mixer.music.stop()
#muzyczka przy skakaniu
